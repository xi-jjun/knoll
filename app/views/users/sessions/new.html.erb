<div class="sign-up-wrapper w-auto">
  <div class="row justify-content-center">
    <div class="col">
      <div class="card sign-up-container">
        <div class="card-header sign-up-title text-white px-5 p-2">
          <h4 class="mb-0">'동산'올라가기 - 로그인</h4>
        </div>

        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '이메일을 입력해주세요.', class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password, 'Password', class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: '비밀번호를 입력해주세요', class: 'form-control' %>
            </div>

            <%= f.submit "로그인", class: 'sign-up-btn sign-up-btn-hover w-100' %>

            <%#= new_user_registration_path == new_registraion_path(resource_name) %>
            <%= link_to "동산에 참여하기 - 회원가입", new_registration_path(resource_name), class: 'login-btn login-btn-hover w-100' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
